@model Gopat.Crm.Ui.Models.HomeViewModel

@{
    ViewData["Title"] = "Home Page";
}


<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>PAT Testing Motherfuckers!</p>
</div>


<div class="row">
    <div class="col-12">

    </div>
</div>


<div class="row">
    <div class="col-4">
        <h3>Companies</h3>   <h4>Top 10</h4>

        <table class="table">

            <tbody>
                @foreach (var item in Model.Companies)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.CompanyName)
                        </td>

                        <td>
                            <a class="btn btn-dark" asp-controller="Companies" asp-action="Details" asp-route-id="@item.Id">Details</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>
